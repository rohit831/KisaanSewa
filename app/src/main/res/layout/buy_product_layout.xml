<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:elevation="2dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cropName"
            android:textSize="22sp"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_marginStart="5dp"
            android:id="@+id/buyProductName"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buyProductPrice"
            android:textColor="@color/colorPrimary"
            android:text="@string/cropPrice"
            android:gravity="end"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/per_kg"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/available"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cropQuantity"
            android:layout_marginStart="2dp"
            android:id="@+id/buyProductQuantity"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/kg"
            android:layout_marginStart="2dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/area"
        android:textStyle="italic"
        android:id="@+id/seller_city"
        android:layout_marginStart="5dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="5dp"
        />



</LinearLayout>