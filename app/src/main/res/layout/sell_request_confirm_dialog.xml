<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/quantity_purchased"-->
            <!--android:textSize="19sp"-->
            <!--android:padding="7dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/black_off"-->
            <!--/>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/quantity_purchased"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:inputType="number"
            android:gravity="bottom"
            android:hint="@string/quantity_purchased"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/out_of"
                android:textSize="14sp"
                android:gravity="center|end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cropQuantity"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:id="@+id/sell_requests_total_quantity"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="kgs"
                android:textSize="14sp"
                android:layout_marginEnd="21dp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

